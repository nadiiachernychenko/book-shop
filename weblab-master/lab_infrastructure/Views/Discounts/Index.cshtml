@model IEnumerable<lab_domain.Model.Discount>

@{
    ViewData["Title"] = "Books discounts";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Discount (%)</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Book</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DiscountPercentage?.ToString("0.##")</td>
                <td>@item.StartDate?.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.EndDate?.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.Book?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

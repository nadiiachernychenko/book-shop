@model lab_domain.Model.Discount
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Discount</h4>
<hr />

<form asp-action="Create" method="post" id="discount-form">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- ВЫБОР КНИГИ: обязательно select по BookId -->
    <div class="form-group mb-3">
        <label asp-for="BookId" class="control-label">Book</label>
        <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId">
            <option value="">-- select book --</option>
        </select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>

    <!-- ПРОЦЕНТ: number с точкой; ниже JS заменит запятую на точку -->
    <div class="form-group mb-3">
        <label asp-for="DiscountPercentage" class="control-label"></label>
        <input asp-for="DiscountPercentage" class="form-control" type="number" step="0.01" inputmode="decimal" />
        <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
    </div>

    <!-- ДАТЫ: используем datetime-local, нужен формат yyyy-MM-ddTHH:mm -->
    <div class="form-group mb-3">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Авто-замена запятой на точку в проценте — чтобы number-прослойка не блокировала submit
        document.getElementById('discount-form').addEventListener('submit', function (e) {
            var pct = document.querySelector('input[name="DiscountPercentage"]');
            if (pct && pct.value && pct.value.indexOf(',') !== -1) {
                pct.value = pct.value.replace(',', '.');
            }
        });
    </script>
}
